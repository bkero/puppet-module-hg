#!/bin/sh

die() {
    echo "$1" 1>&2
    exit ${2:-1}
}

usage() {
    echo "USAGE"
    echo " $0 [-r source_repo_root] [-t target_directory] [-c changeset] <repository>"
    echo
}

check_nowait_lock() {
    if [ -e $1 ]; then
        return 1
    fi

    return 0
}

check_wait_lock() {
    if [ -e $1 ]; then
        sleep 5
        check_wait_lock $1
    fi
    return 0
}

create_lock() {
    check_nowait_lock $1 && touch $1
}


TEMP=`getopt --options hr:t:l:c: --long help,root:,target:lock-retries:changeset: \
    -n 'mirror-pull' -- "$@"`
if [ $? != 0 ]; then
    die "getopt barfed"
fi

eval set -- "$TEMP"

# defaults:
REPO_ROOT=ssh://<%= @mirror_source %>
REPO_TARGET=<%= @repo_serve_path %>
LOCK_RETRIES=3 # 3 retries, the first is 5, second is 10, third is 15
CHANGESET=""

export PYTHONPATH=<%= @python_lib_override_path %>:<%= @python_lib_path %>

while true; do
    case "$1" in 
        -r|--root)
            REPO_ROOT="$2" ; shift 2
            ;;
        -t|--target)
            REPO_TARGET="$2" ; shift 2
            ;;
        -l|--lock-retries)
            LOCK_RETRIES="$2" ; shift 2
            ;;
        -c|--changeset)
            CHANGESET="-r $2" ; shift 2
            ;;
        -h|--help)
            usage
            exit 0
            ;;
        --)
            shift ; break
            ;;
        *)
            die "I don't know what happened."
            ;;
    esac
done

if [ -n "$SSH_ORIGINAL_COMMAND" ]; then
    # We're running under ssh; the repository is given in the third field
    repo=`echo $SSH_ORIGINAL_COMMAND | cut -d ' ' -f 3`
else
    repo="$1"
fi

repo=`echo "$repo" | sed 's#[^-\._/[:alnum:]]##g'`
test -z "$repo" && die "need a repo to clone, relative to %<= @repo_serve_path %>" 

name=`echo $repo | sed 's#^/*##'`
src=${REPO_ROOT}/$name

GLOBAL_HG_OPTS="--config hooks.pretxnchangegroup.z_linearhistory= --config hooks.pretxnchangegroup.z_loghistory= --config trusted.users=root,hg --config paths.default=ssh://<%= @mirror_source %>/${name}"

cd $REPO_TARGET || die "$REPO_TARGET does not exist, cannot create repositories there"

exit_code=0
if [ -d "$name" ]; then
    echo "$name already exists, pulling"
    cd $name
    lockfile -r $LOCK_RETRIES ${PWD}/syncing.lck || die "Could not lock destionation"
    hg pull $GLOBAL_HG_OPTS $CHANGESET
    ssh -i <%= @mirror_priv_key_path %> -l <%= @mirror_user_name %> <%= @mirror_source %> pushlog $name > .hg/pushlog2.db
    exit_code=$?
    rm ${PWD}/syncing.lck
elif [ \! -e $name ]; then
    mkdir -p `dirname $name` 
    echo "$name does not yet exist, cloning"
    lockfile -r $LOCK_RETRIES ${PWD}/syncing.lck || die "Could not lock destionation"
    hg clone $GLOBAL_HG_OPTS -U -v "$src" $name
    ssh -i <%= @mirror_priv_key_path %> -l <%= @mirror_user_name %> <%= @mirror_source %> pushlog $name > ${name}/.hg/pushlog2.db
    exit_code=$?
    rm ${PWD}/syncing.lck
else
    die "WTF is $REPO_TARGET/$name"
fi

exit $exit_code

